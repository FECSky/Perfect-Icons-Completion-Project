    <Image x="134" y="394-260*#iconAni" pivotX="134" pivotY="134" align="center" alignV="center" alpha="35+220*#iconAni" src="com.miui.notes3.png" />
    <Image alpha="255" align="center" alignV="center" src="com.miui.notes.png" x="134" y="134" xfermode="dst_atop"/>
	</Group>
</Icon>